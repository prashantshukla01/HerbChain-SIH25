<!DOCTYPE html>
<html>
<head>
  <title>Batch <%= product.batchId %></title>
  <style>
    body { font-family: Arial; padding: 20px; }
    table { border-collapse: collapse; width: 100%; margin-top: 20px; }
    th, td { border: 1px solid #ccc; padding: 8px; }
  </style>
</head>
<body>
  <h1>Batch: <%= product.batchId %></h1>
  <p><strong>Herb Name:</strong> <%= product.herbName %></p>
  <p><strong>Quantity:</strong> <%= product.quantity %></p>

  <h2>Steps</h2>
  <table>
    <thead>
      <tr>
        <th>Step Type</th>
        <th>Timestamp</th>
        <th>Actor ID</th>
        <th>Quality</th>
        <th>Location</th>
        <th>Action</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% steps.forEach(step => { %>
        <tr>
          <td><%= step.stepType %></td>
          <td><%= new Date(Number(step.timestamp) * 1000).toLocaleString() %></td>
          <td><%= step.actorId %></td>
          <td><%= step.quality %></td>
          <td><%= step.location %></td>
          <td><%= step.action %></td>
          <td><%= step.details %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
